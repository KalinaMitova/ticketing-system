@model int
<div class="row">
    <div class="col-md-2 ">
        @Html.LabelFor(m => m)
    </div>
    <div class="col-md-5 ">
        @Html.DropDownListFor(m => m, (IEnumerable<SelectListItem>)ViewBag.ListItem, "Choose Category", new { @class = "form-control"})
    </div>
    <div class="col-md-5 ">
        @Html.ValidationMessageFor(m => m)
    </div>
</div><br />
